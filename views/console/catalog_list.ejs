<script>
    var handleDataTableButtons = function() {
                "use strict";
                0 !== $("#datatable-responsive").length && $("#datatable-responsive").DataTable({
                    buttons: [{
                        extend: "copy",
                        className: "btn-sm"
                    }, {
                        extend: "csv",
                        className: "btn-sm"
                    }, {
                        extend: "excel",
                        className: "btn-sm"
                    }, {
                        extend: "pdf",
                        className: "btn-sm"
                    }, {
                        extend: "print",
                        className: "btn-sm"
                    }],
                    responsive: !0,
                    //keys: true,
                    fixedHeader: true,
                    dom: "Bfrtip"
                })
            },
            TableManageButtons = function() {
                "use strict";
                return {
                    init: function() {
                        handleDataTableButtons()
                    }
                }
            }();

    TableManageButtons.init();
</script>